<Page x:Class="Diplom.Resources.View.Pages.DocumentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Resources.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DocumentsPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="20 0 10 0" Text="Документы" Foreground="black" VerticalAlignment="Center" FontSize="30"/>
            <Button Name="AddButton" Background="Transparent" BorderThickness="0" Width="30" Height="20" VerticalAlignment="Center" Margin="0 5 0 0" Click="AddButton_Click" Style="{DynamicResource ImageButton}">
                <Image Source="../../Images/plus.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
